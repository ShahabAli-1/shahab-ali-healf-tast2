{% stylesheet %}
  .bs-devshop__expandable-faq__container {
    padding: 4.7rem 0;
  }

  .bs-devshop__expandable-faq__heading__container {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2.5rem;
  }

  .bs-devshop__expandable-faq__heading-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  .bs-devshop__landing-expandable-faq__button-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .bs-devshop__landing-expandable-faq__button {
    padding: 1.6rem 3.3rem;
    text-decoration: none;
    background-color: #FFFFFF;
    color: #000000;
    border-radius: 2.6rem;
    overflow: hidden;
    cursor: pointer;
    font-weight: 500;
    font-size: 1.8rem;
    line-height: 1.9rem;
    letter-spacing: -0.025rem;
  }
  .bs-devshop__expandable-faq__heading {
    font-size: 5.6rem;
    font-weight: 500;
    letter-spacing: -0.09em;
    text-align: center;
    color: #FFFFFF;
  }

  .bs-devshop__expandable-faq__accordion {
    border-top: 1px solid #FFFFFF;
  }

  .bs-devshop__expandable-faq__accordion.last-row {
    border-bottom: 1px solid #FFFFFF;
  }

  .bs-devshop__expandable-faq__summary-div {
    position: relative;
    padding: 3.1rem 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .bs-devshop__expandable-faq__summary-div icon-caret {
    color: #000000;
    height: 1.6rem;
    width: 1.6rem;
  }

  .bs-devshop__expandable-faq__icon-caret-wrapper {
    height: 1.6rem;
    width: 1.6rem;
  }

  .bs-devshop__expandable-faq__row-title {
    font-size: 2.8rem;
    font-weight: 400;
    letter-spacing: -0.04em;
    line-height: 3.1rem;
    color: #FFFFFF
  }

  .bs-devshop__expandable-faq__row-content {
    font-size: 1.8rem;
    font-weight: 300;
    letter-spacing: -0.04em;
    line-height: 3.1rem;
    color: #FFFFFF;
  }

  summary .icon-caret.bs-devshop__icon-caret {
    position: absolute;
    height: 0.8rem;
    width: 1.4rem;
    right: 0;
    top: calc(50%);
  }

  .bs-devshop__expandable-faq__accordion details[open] > summary .icon-caret.bs-devshop__icon-caret {
    transform: rotate(180deg);
  }

  .bs-devshop__expandable-faq__link {
    display: block;
    text-decoration: none;
  }

  .icon-caret-wrapper {
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
  }

  .icon-caret-wrapper .icon-caret {
    height: 0.8rem;
    width: 1.4rem;
  }

  @media (max-width: 768px) {
    .bs-devshop__expandable-faq__heading {
      font-size: 4.5rem;
    }

    .bs-devshop__expandable-faq__button {
      font-size: 1.6rem;
      padding: 1rem 2rem;
    }

    .bs-devshop__expandable-faq__summary-div {
      padding: 2.5rem 0;
    }

    .bs-devshop__expandable-faq__row-title {
      font-size: 2.4rem;
      line-height: 2.8rem;
    }

    .bs-devshop__expandable-faq__row-content {
      font-size: 1.6rem;
      line-height: 2.4rem;
    }
  }

  @media (max-width: 350px) {
    .bs-devshop__expandable-faq__heading__container {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      margin-bottom: 2.5rem;
    }

    .bs-devshop__expandable-faq__button-wrapper {
      margin-top: 2.5rem;
    }
  }
{% endstylesheet %}