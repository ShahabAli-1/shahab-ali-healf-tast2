                "label": "Slides per view divided by 10",
                "unit": "num",
                "min": 20,
                "max": 40,
                "step": 1,
                "default": 40
            },
            {
                "type": "header",
                "content": "Paddings - Desktop"
            },
            {
                "type": "range",
                "id": "padding_top",
                "label": "Padding top",
                "unit": "px",
                "min": 0,
                "max": 120,
                "step": 5,
                "default": 60
            },
            {
                "type": "range",
                "id": "padding_bottom",
                "label": "Padding bottom",
                "unit": "px",
                "min": 0,
                "max": 120,
                "step": 5,
                "default": 40
            },
            {
                "type": "header",
                "content": "Paddings - Tablet"
            },
            {
                "type": "range",
                "id": "padding_top_tablet",
                "label": "Padding top",
                "unit": "px",
                "min": 0,
                "max": 60,
                "step": 5,
                "default": 40
            },
            {
                "type": "range",
                "id": "padding_bottom_tablet",
                "label": "Padding bottom",
                "unit": "px",
                "min": 0,
                "max": 60,
                "step": 5,
                "default": 30
            }
        ],
        "blocks":[
            {
                "name":"Brand",
                "type":"item",
                "settings":[
                    {
                        "type":"text",
                        "id":"title",
                        "label":"Title"
                    },
                    {
                        "type":"text",
                        "id":"subtitle",
                        "label":"Subtitle"
                    },
                    {
                        "type":"url",
                        "id":"link",
                        "label":"Link"
                    },
                    {
                        "type":"image_picker",
                        "id":"image",
                        "label":"Image"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "BB - About Pillars"
            }
        ]
    }
{% endschema %}
