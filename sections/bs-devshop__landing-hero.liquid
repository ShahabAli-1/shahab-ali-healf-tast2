{%  liquid
    assign ss = section.settings
    assign bg_color = ss.bg_color
    assign phone_image = ss.phone_image
    assign video_id = ss.video_bg.id
    assign video_alt = ss.video_bg.alt | default: ss.description
    assign alt = 'sections.video.load_video' | t: description: video_alt | escape
    assign poster = ss.poster_image
%}

<style>
    .bs-devshop__landing-hero {
        background-color: {{ bg_color }};
        position: relative;
        overflow: hidden;
        {% if product.handle == "healf-zone" %}
        margin-top: 40px;
        {% else %}
        min-height: 100vh;
        {% endif %}
        display: flex;
        flex-direction: column;
    }

    .bs-devshop__landing-hero__video-container {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 0;
    }

    .bs-devshop__landing-hero__video-poster,
    .bs-devshop__landing-hero__video {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .bs-devshop__landing-hero__wrapper {
        position: relative;
        z-index: 1;
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        padding-top: 11rem;
        flex-grow: 1;
        width: 100%;
        overflow: hidden;
    }

    .bs-devshop__landing-hero__content {
        flex: 1;
        max-width: 60%;
        color: #fff;
        position: relative;
        z-index: 2;
        padding-top: 3rem;
    }

    .bs-devshop__landing-hero__logo {
        max-width: 100%;
        height: auto;
        color: #fff;
        font-size: 3.5rem;
    }

    .bs-devshop__landing-hero__logo sup {
        font-size: 1rem;
        vertical-align: super;
        background: linear-gradient(162.2deg, #32755F 60.58%, #5377BB 91.12%, #CB8F51 121.92%, #CE6C47 148.81%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        color: transparent;
    }

    .bs-devshop__landing-hero__logo sup svg {
        width: 4.5rem;
        height: 1.5rem;
    }

    .bs-devshop__landing-hero__title {
        font-size: 5.5rem;
        line-height: 1.2;
        letter-spacing: -0.172rem;
        word-spacing: 2rem;
        margin: 10rem 0;
        width: 70rem;
    }

    .bs-devshop__landing-hero__title div {
        margin: 0;
        display: flex;
        justify-content: space-between;
    }

    .bs-devshop__landing-hero__title div:nth-child(1),
    .bs-devshop__landing-hero__title div:nth-child(2) {
        min-width: 100%;
        white-space: nowrap;
    }

    .bs-devshop__landing-hero__title div:nth-child(3) {
        display: inline-block;
    }


    .bs-devshop__landing-hero__subtitle {
        font-size: 2.2rem;
        margin-bottom: 17rem;
    }

    .bs-devshop__landing-hero__phone {
        max-width: 40rem;
        margin-bottom: -14.5rem;
        position: relative;
        z-index: 2;
        align-self: flex-end;
    }

    .bs-devshop__landing-hero__phone img {
        max-width: 100%;
        height: auto;
        display: block;
        padding-bottom: 0;
    }

    .bs-devshop__landing-hero__apply-section {
        border-top-left-radius: 3.6rem;
        border-top-right-radius: 3.6rem;
        position: relative;
        z-index: 3;
        margin-top: -5rem;
    }

    .bs-devshop__landing-hero__title-mobile {
        display: none;
        font-size: 2rem;
        margin: 1rem 0 4rem 0;
    }


    @media screen and (max-width: 768px) {
        .bs-devshop__landing-hero__subtitle {
            display: none;
        }

        .bs-devshop__landing-hero {
            min-height: unset;
        }
        .bs-devshop__landing-hero__wrapper {
            {% if product.handle == 'healf-zone' %}
            padding-top: 0;
            {% endif %}
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .bs-devshop__landing-hero__content {
            max-width: 100%;
        }

        .bs-devshop__landing-hero__phone {
            max-width: unset;
        }

        .bs-devshop__landing-hero__logo {
            font-size: 3.2rem;
        }

        .bs-devshop__landing-hero__title {
            display: none;
        }

        .bs-devshop__landing-hero__title-mobile {
            display: block;
        }

        .bs-devshop__landing-hero__logo sup svg {
            width: 3rem;
            height: 1.2rem;
        }

        .bs-devshop__landing-hero__subtitle {
            font-size: 2rem;
            font-weight: 350;
            line-height: 3rem;
            margin-bottom: 4.4rem;
        }

        .bs-devshop__landing-hero__phone {
            width: 100%;
            display: flex;
            justify-content: center;
            {% if product.handle == 'healf-zone' %}
            margin-bottom: -30vw;
            {% else %}
            margin-bottom: -9.2rem;
            {% endif %}
            margin-top: 2rem;
        }

        .bs-devshop__landing-hero__phone img {
            max-width: 26.3rem;
        }
    }

    @media screen and (min-width: 901px) and (max-width: 1024px) {
        .bs-devshop__landing-hero__title {
            font-size: 3.5rem;
            margin: 9.3rem 0;
            width: 90%;
        }

        .bs-devshop__landing-hero__title div:nth-child(1),
        .bs-devshop__landing-hero__title div:nth-child(2) {
            min-width: 100%;
            white-space: wrap;
        }

        .bs-devshop__landing-hero__title div:nth-child(1) span:not(:first-child)
        .bs-devshop__landing-hero__title div:nth-child(2) span:not(:first-child) {
            margin-left: 1rem;
        }

        .bs-devshop__landing-hero__title div:nth-child(2) {
            white-space: wrap;
        }

    }

    @media screen and (min-width: 1025px) and (max-width: 1280px) {
        .bs-devshop__landing-hero__title {
        font-size: 4.5rem;
        line-height: 1.2;
        letter-spacing: -0.172rem;
        word-spacing: 2rem;
        margin: 10rem 2rem 10rem 0;
        width: 90%;
    }
    }
</style>

<section class="bs-devshop__landing-hero bs-devshop__landing-hero--{{section.id}}">
    {% if product.handle == 'healf-zone' %}
    <a href="/pages/healf-zone">
    {% endif %}
    <noscript>
        <div class="bs-devshop__landing-hero__video-container">
            {% if ss.video_bg != blank %}
                {{ ss.video_bg | video_tag: image_size: '1920x', loop: ss.enable_video_looping, controls: true, muted: false, class: 'bs-devshop__landing-hero__video' }}
            {% elsif poster != blank %}
                {{ poster | image_url: width: 1920 | image_tag: loading: 'lazy', alt: alt, class: 'bs-devshop__landing-hero__video-poster' }}
            {% endif %}
        </div>
    </noscript>

    <deferred-media class="bs-devshop__landing-hero__video-container deferred-media no-js-hidden"
        data-media-id="{{ video_id }}"
    >
        <button
            id="Deferred-Poster-Modal-{{ video_id }}"
            class="bs-devshop__landing-hero__video-poster deferred-media__poster"
            type="button"
            aria-label="{{ alt }}"
        >
            {% if poster != blank %}
                {{ poster | image_url: width: 1920 | image_tag:
                    loading: 'lazy',
                    sizes: '100vw',
                    widths: '375, 750, 1100, 1500, 1780, 2000, 3000, 3840',
                    alt: alt,
                    class: 'bs-devshop__landing-hero__video-poster'
                }}
            {% else %}
                {{ 'collection-2' | placeholder_svg_tag: 'placeholder-svg placeholder bs-devshop__landing-hero__video-poster' }}
            {% endif %}
        </button>
        {% if ss.video_bg != blank %}
            {{ ss.video_bg | video_tag:
                image_size: '1920x',
                loop: ss.enable_video_looping,
                controls: false,
                muted: true,
                autoplay: true,
                class: 'bs-devshop__landing-hero__video'
            }}
        {% endif %}
    </deferred-media>

    <div class="bs-devshop__landing-hero__wrapper page-width">
        <div class="bs-devshop__landing-hero__content">
            <h2 class="bs-devshop__landing-hero__logo">Healf Zone<sup>{% render 'bs-devshop__beta-text' %}</sup></h2>
            <div class="bs-devshop__landing-hero__title"><div><span>The</span> <span>Power</span> <span>of</span> <span>Optimal</span></div><div><span>Wellbeing</span> <span>Has</span> <span>Always</span> <span>Been</span></div><div> Within Us.</div></div>
            <div class="bs-devshop__landing-hero__title-mobile">The power of Optimal Wellbeing Has Always Been Within Us</div>
            <div class="bs-devshop__landing-hero__subtitle">{{ ss.subtitle }}</div>
        </div>
        {% if phone_image != blank %}
            <div class="bs-devshop__landing-hero__phone">
                {{ phone_image | image_url: width: 400 | image_tag: class: 'object-fit--cover', alt: 'Phone Image' }}
            </div>
        {% endif %}
    </div>
    {% unless product.handle== 'healf-zone' %}
    <div class="bs-devshop__landing-hero__apply-section">
        {% render 'bs-devshop__beta-apply' mobile_title: ss.mobile_title %}
    </div>
    {% endunless %}
    {% if product.handle == 'healf-zone' %}
    </a>
    {% endif %}
</section>

{% schema %}
{
  "name": "Landing Hero Banner",
  "class": "section",
  "settings": [
    {
        "type": "video",
        "id": "video_bg",
        "label": "Background Video"
    },
    {
        "type": "image_picker",
        "id": "poster_image",
        "label": "Poster Image (displayed while video loads)"
    },
    {
        "type": "checkbox",
        "id": "enable_video_looping",
        "label": "Enable video looping",
        "default": true
    },
    {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color",
        "default": "#000000"
    },
    {
        "type": "richtext",
        "id": "title",
        "label": "Title",
    },
    {
        "type": "richtext",
        "id": "mobile_title",
        "label": "Mobile Title",
        "default": "<p>The Power Of Optimal<br>Wellbeing Has Always<br>Been Within Us.</p>"
    },
    {
        "type": "richtext",
        "id": "subtitle",
        "label": "Subtitle",
        "default": "<p>Advanced Biometric Technology <br>For Personalised Health Optimisation.</p>"
    },
    {
        "type": "image_picker",
        "id": "phone_image",
        "label": "Phone Image"
    }
  ],
  "presets": [
    {
      "name": "Landing Hero Banner"
    }
  ]
}
{% endschema %}