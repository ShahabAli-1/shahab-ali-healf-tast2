{{ 'component-one-in-three-benefits.css' | asset_url | stylesheet_tag }}
{%  liquid 
    assign ss = section.settings 
    assign heading = ss.heading
    assign sub_heading = ss.sub_heading
    assign description = ss.description
    assign button_text = ss.button_text
    assign button_link = ss.button_link
    assign bg_image = ss.image
%}

<section class="bs-devshop__oit">
    <div class="bs-devshop__oit__wrapper">
        {% if bg_image != blank %}
            <div class="bs-devshop__oit__image">
                <div class="bs-devshop__oit__image--rotate">
                    {% render 'image-element', image: bg_image, size: '1920x', extra_class: 'object-fit--cover'%}
                </div>
            </div>
        {% endif %}
        <div class="bs-devshop__oit__text">
            {% if heading != blank and sub_heading != blank %}
                <div class="bs-devshop__oit__text--top">
                    <h1 class="bs-devshop__oit__heading">{{ heading }}</h1>
                    <p class="bs-devshop__oit__sub__heading">{{ sub_heading }}</p>
                </div>
            {% endif %}
            {% if bg_image != blank %}
                <div class="bs-devshop__oit__image oit__image--mobile">
                    <div class="bs-devshop__oit__image--rotate">
                        {% render 'image-element', image: bg_image, size: '1920x', extra_class: 'object-fit--cover'%}
                    </div>
                </div>
            {% endif %}
            {% if description != blank and button_text != blank %}
                <div class="bs-devshop__oit__text--bottom">
                    <div class="bs-devshop__oit__description">{{ description }}</div>
                    <a class="bs-devshop__oit__link btn--white" href="{{button_link}}">{{ button_text }}</a>
                </div>
            {% endif %}
        </div>
    </div>
</section>

{% schema %}
{
  "name": "One in Three Benefits",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Left Content"
    },
    {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
    },
    {
      "type": "header",
      "content": "Right Content"
    },
    {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "1 in 3"
    },
    {
        "type": "text",
        "id": "sub_heading",
        "label": "Sub Heading",
        "default": "people are C15:0 deficient"
    },
    {
        "type": "richtext",
        "id": "description",
        "label": "Description"
    },
    {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "Read more"
    },
    {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
    }
  ],
  "presets": [
    {
        "name": "One in Three Benefits"
    }
  ]
}
{% endschema %}
