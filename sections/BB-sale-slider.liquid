    height: auto;
    overflow: hidden;
  }

  .sale-info__container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: inherit;
    background-image: url('{{ ss.image | img_url:"master" }}');
    background-size: cover;
    background-repeat: no-repeat;
    z-index: -1;
  }

  [data-keen-slider] {
    flex-grow: 1;
    position: relative;
  }
  .sale-info__title-container {
    display: flex;
    justify-content: space-between;
  }

  .sitc {
    position: absolute;
    bottom: 20px;
    width: 93%;
  }
  .sale-slider__title {
    color: #FFF;
    font-size: 38px;
    letter-spacing: -1px;
    padding-bottom: 40px;
  }
  .sale-slider__title-i {
    color: #FFF;
    letter-spacing: -1px;
    align-content: end;
    font-size: 26px;
  }
  .sale-slider__date {
    color: #FFF;
    font-size: 18px;
    border-radius: 36px;
    line-height: 46px;
    padding: 0px 22px;
    border: 1px solid #FFF;
    letter-spacing: -1px;
    background-color: rgb(255 255 255 / 19%);
  }
  .sale-slider__description {
    color: #FFF;
    font-size: 74px;
    line-height: 1;
    letter-spacing: -1.5px;
    padding-top: 40px;
  }
  .sale-slider__btn {
    background-color: #FFF;
    color: #000;
    border-color: #FFF;
    width: 220px;
  }
  .sale-slider__container .sale-slider__card>.image-element-wrapper {
    padding-bottom: 400px;
    border-radius: 0px;
  }
  .sale-slider__logo {
    position: absolute;
    z-index: 1;
    right: 20px;
    bottom: 20px;
    width: 250px;
  }

  [data-keen-slider] {
    border-radius: 0px 20px 20px 0px;
  }

  @media (max-width: 834px) {
      .sale-info__container::before {
          background-image: url('{{ ss.image_mobile | img_url:"master" }}');
      }
      .sale-slider__container .sale-slider__card>.image-element-wrapper {
          height: auto;
          padding-bottom: 100%;
      }
    .sale-info__container {
      width: calc(100% - 40px);
      top: 50%;
    }
    .sale-slider__title {
      font-size: 34px;
    }
    .sale-slider__date {
      line-height: 30px;
      font-size: 16px;
      padding: 0 16px;
    }
    .sale-slider__description {
      font-size: 60px;
    }
    .sale-slider__btn {
      padding: 8px 20px;
      margin: 0 20px;
      width: 170px;
    }
    .sale-slider__logo {
      width: 140px;
    }
  }

  @media (max-width: 834px) {
  .sale-slider__container {
    display: flex;
    flex-direction: column;
  }

  .sale-info__container {
    width: 100%;
        top: 0%;
        order: 1;
        border-radius: 20px 20px 0px 0px;
        height: 380px;
  }

  [data-keen-slider] {
    order: 2;
    border-radius: 0px 0px 20px 20px;
  }

  .sale-slider__title {
    font-size: 32px;
  }

  .sale-slider__logo {
    width: 140px;
  }
}

@media (min-width: 1000px) and (max-width: 1060px) {
  .sale-slider__description {
    font-size: 70px;
  }
}

@media (min-width: 800px) and (max-width: 999px) {
  .sale-slider__description {
    font-size: 70px;
  }

  .sale-slider__title {
    color: #FFF;
    font-size: 28px;
  }

  .sale-slider__title-i, .sale-slider__date  {
    font-size: 18px;
  }

  .sale-slider__title {
    padding-bottom: 80px;
      }
}
</style>

