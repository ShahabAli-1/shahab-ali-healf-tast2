{% assign ss = section.settings %}

{% capture slider_settings %}
    {
      "autoplay": true,
      "autoplaySpeed": 5000,
      "slidesPerView": 1,
      "autoAdjustSlidesPerView": false,
      "fade": true,
      "loop": true
    }
{% endcapture %}
<div class="template-index wrapper">

<div class="sale-slider__container" style="
width: 100%;
margin-left: auto;
margin-right: auto;
">
    <div class="sale-info__container">
      <div class="sale-info__title-container">
        {% if ss.title != blank %}
            <p class="sale-slider__date">{{ ss.title }}</p>
        {%- endif -%}
      </div>

      <div style="position: absolute; top: 50%; transform: translate(0%, -50%);">
        {% if ss.date != blank %}
          <p class="sale-slider__description box">{{ ss.date }}</p>
        {% endif %}

        {% if ss.description != blank %}
          <p class="sale-slider__title">{{ ss.description  | strip_html | escape }}</p>
        {%- endif -%}
      </div>

      <div class="sale-info__title-container sitc">
        {% if ss.button_text != blank %}
            <p class="sale-slider__title-i">{{ ss.button_text }}</p>
        {%- endif -%}
        {% if ss.title != blank %}
          <a href="{{ ss.button_link }}" class="sale-slider__btn btn">Shop Collection</a>
        {%- endif -%}
      </div>
    </div>
    <div data-keen-slider='{{ slider_settings }}' style="height: 40vh;">
        {%- for block in section.blocks -%}
        {% assign bs = block.settings %}
            <div class="sale-slider__card">
                {% if bs.image != blank %}
                    {% render 'image-element', image: bs.image, image_mobile: bs.image_mobile, size: '1920x', extra_class: 'object-fit--cover'%}
                {%- endif -%}
                {% if bs.image_logo != blank %}
                  <div class="sale-slider__logo">
                    {% render 'image-element', image: bs.image_logo, image_mobile: bs.image_logo, size: '200x', extra_class: 'object-fit--contain'%}
                  </div>
                {%- endif -%}
            </div>
        {% endfor %}
    </div>
</div>
</div>


<style>

[class*=object-fit--] {
    height: 100%;
}

@media (max-width: 834px) {
  .box {
    width: 270px;
  }

    .template-index .wrapper {
        padding-top: 20px;
    }

    .sale-slider__title-i {
      font-size: 14px !important;
  }
}

    .template-index .wrapper {
        padding-top: 40px;
    }

  .sale-slider__container {
    display: flex;
    position: relative;
  }
  .sale-info__container {
    border-radius: 20px 0 0 20px;
    padding: 20px;
    z-index: 1;
    background-color: rgba(255, 255, 255, 0.2);
    margin-right: auto;
    width: 50%;

