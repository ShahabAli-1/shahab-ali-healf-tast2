{{ 'bs-devshop__bfcm-collection-carousel.css' | asset_url | stylesheet_tag }}

  <div class="bs-devshop__bfcm-collection-carousel" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
    <bs-devshop-bfcm-collection-splide-carousel>

    <div class="bs-devshop__bfcm-collection-carousel__outer-wrapper wrapper"> 
            <div class="splide" id="splide-collection-carousel">
            <div class="splide__track bs-devshop__bfcm-collection-carousel__splide-track">
                <ul class="splide__list">
                {% for block in section.blocks %}
                    {% assign bs = block.settings %}
                    <li class="splide__slide">
                    <div class="slide-content">
                        <a href="{{ bs.collection.url }}" class="bs-devshop__bfcm-collection-carousel__collection">
                        <div class="bs-devshop__bfcm-collection-carousel-image is-slow-zoom">
                            {% render 'image-element',
                            image: bs.image,
                            image_mobile: bs.image,
                            size: '1920x',
                            extra_class: 'object-fit--cover blocks-image'
                            %}
                        </div>
                        <h3 class="bs-devshop__bfcm-collection-carousel-title">{{ bs.card_title }}</h3>                       
                        <a href="{{ bs.collection.url }}" class="bs-devshop__bfcm-collection-carousel__collection-link">{% render 'icon-chevron-right' %}</a>
                        </a>
                    </div>
                    </li>
                {% endfor %}
                </ul>
            </div>
            </div>
        </div> 
    </bs-devshop-bfcm-collection-splide-carousel>
    
  </div>

{% schema %}
{
  "name": "BFCM Collection Carousel",
  "tag": "section",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "default": 30,
      "step": 1
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "default": 30,
      "step": 1
    }
  ],
  "blocks": [
    {
      "type": "blocks",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Brand image"
        },
        {
          "type": "richtext",
          "id": "card_title",
          "label": "Card Title"
        },
        {
          "type": "text",
          "id": "cta_title",
          "label": "CTA Title",
          "default": "Shop Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "BFCM Collection Carousel",
      "settings": {}
    }
  ]
}
{% endschema %}
