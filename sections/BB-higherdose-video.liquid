{% assign ss = section.settings %}

<div class="higherdose-video__container">
    <div class="title-area">
        <p>
            {{ ss.subtitle }}
        </p>

        <h3>
            {{ ss.title }}
        </h3>
    </div>
</div>

{% style %}
    #shopify-section-{{ section.id }}.higherdose-video {
        padding-top: {{ ss.padding_top }}px;
        padding-bottom: {{ ss.padding_bottom }}px;
    }

    @media screen and (max-width: 750px) {
        #shopify-section-{{ section.id }}.higherdose-video {
            padding-top: {{ ss.padding_top_tablet }}px;
            padding-bottom: {{ ss.padding_bottom_tablet }}px;
        }
    }
{% endstyle %}

{% schema %}
    {
        "name": "BB - HigherDOSE Video",
        "tag": "section",
        "class": "higherdose-video",
        "settings": [
            {
                "type": "header",
                "content": "Text area"
            },
            {
                "type": "text",
                "id": "subtitle",
                "label": "Subtitle"
            },
            {
                "type": "text",
                "id": "title",
                "label": "Title"
            },
            {
                "type": "header",
                "content": "Video area"
            },
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
                "type": "image_picker",
                "id": "image_mobile",
                "label": "Image Mobile"
            },
            {
                "type": "video_url",
                "id": "video_url",
                "accept": [
                    "youtube",
                    "vimeo"
                ],
                "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc",
                "label": "t:sections.video.settings.video_url.label",
                "placeholder": "t:sections.video.settings.video_url.placeholder",
                "info": "t:sections.video.settings.video_url.info"
            },
            {
                "type": "header",
                "content": "Paddings - Desktop"
            },
            {
                "type": "range",
                "id": "padding_top",
                "label": "Padding top",
                "unit": "px",
                "min": 0,
                "max": 120,
                "step": 5,
                "default": 80
            },
            {
                "type": "range",
                "id": "padding_bottom",
                "label": "Padding bottom",
                "unit": "px",
                "min": 0,
                "max": 120,
                "step": 5,
                "default": 80
            },
            {
                "type": "header",
                "content": "Paddings - Tablet"
            },
            {
                "type": "range",
                "id": "padding_top_tablet",
                "label": "Padding top",
                "unit": "px",
                "min": 0,
                "max": 60,
                "step": 5,
                "default": 40
            },
            {
                "type": "range",
                "id": "padding_bottom_tablet",
                "label": "Padding bottom",
                "unit": "px",
                "min": 0,
                "max": 60,
                "step": 5,
                "default": 40
            }
        ],
        "blocks": [
            {
                "type": "blocks",
                "name": "Blocks",
                "settings": [
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Title"
                    },
                    {
                        "type": "richtext",
                        "id": "content",
                        "label": "Content"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "BB - HigherDOSE Video"
            }
        ]
    }
{% endschema %}
