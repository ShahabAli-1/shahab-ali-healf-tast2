            {
                "type": "range",
                "id": "padding_bottom",
                "label": "Padding bottom",
                "unit": "px",
                "min": 0,
                "max": 200,
                "step": 5,
                "default": 80
            },
            {
                "type": "header",
                "content": "Paddings - Tablet"
            },
            {
                "type": "range",
                "id": "padding_top_tablet",
                "label": "Padding top",
                "unit": "px",
                "min": 0,
                "max": 60,
                "step": 5,
                "default": 40
            },
            {
                "type": "range",
                "id": "padding_bottom_tablet",
                "label": "Padding bottom",
                "unit": "px",
                "min": 0,
                "max": 60,
                "step": 5,
                "default": 40
            }
        ],
        "blocks":[
            {
                "name":"Articles",
                "type":"article",
                "settings":[
                    {
                        "type":"article",
                        "id":"article",
                        "label":"Article"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "BB - Blog"
            }
        ]
    }
{% endschema %}
