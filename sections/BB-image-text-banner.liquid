{% assign ss = section.settings %}
<div id="founders" class="bb-image-with-text__wrapper" style='background-color: #000;'>
<div class="image-with-text__container wrapper {% if ss.image_right %}image-right{% endif %}">
    {% if ss.image != blank %}
        {% render 'image-element', image: ss.image, image_mobile: ss.image_mobile, size: '1920x', extra_class: 'object-fit--cover image-with-text-image image-with-text-banner-image'%}
    {%- endif -%}

    <div class="image-with-text-content">
        {% if ss.title != blank %}
            <div>
            <h2 class="liquid-title" style="color: #fff;">{{ ss.title }}</h2>
            </div>
        {%- endif -%}
        {% if ss.description != blank %}
            <div class='text-banner-header'>
            <p>{{ ss.description }}</p>
            </div>
        {%- endif -%}
        {% if ss.button_text != blank %}
            <div class='text-banner-header'>
            <a href="{{ ss.button_link }}" class="btn">{{ ss.button_text }}</a>
            </div>
        {% endif %}

        {%- if section.blocks != empty -%}
            <div class="image-with-text__blocks">
                {%- for block in section.blocks -%}
                    {% assign bs = block.settings %}

                    <div>
                        {% render 'image-element', image: bs.image, image_mobile: ss.image_mobile, size: '1920x', extra_class: 'object-fit--cover blocks-image'%}

                        <div class="content">
                            <h4>{{ bs.title }}</h4>
                            <p>{{ bs.description }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</div>
</div>
{% style %}
    .bb-image-with-text__wrapper {
        padding-top: {{ ss.padding_top }}px;
        padding-bottom: {{ ss.padding_bottom }}px;
    }

    @media screen and (max-width: 750px) {
        .bb-image-with-text__wrapper {
            padding-top: {{ ss.padding_top_tablet }}px;
            padding-bottom: {{ ss.padding_bottom_tablet }}px;
        }
    }
{% endstyle %}

{% schema %}
    {
        "name": "BB - Image text banner",
        "tag": "section",
        "class": "bb-image-with-text",
        "max_blocks": 4,
        "settings": [
            {
                "type": "header",
                "content": "Image with text"
            },
            {
                "type": "checkbox",
                "id": "image_right",
                "default": false,
                "label": "If you want the image to be right check this!"
            },
            {
                "type": "text",
                "id": "title",
                "label": "Title"
            },
            {
                "type": "richtext",
                "id": "description",
                "label": "Description"
            },
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
                "type": "text",
                "id": "button_text",
                "label": "Button Text"
            },
            {
                "type": "url",
                "id": "button_link",
                "label": "Button Link"
            },
            {
                "type": "range",
                "id": "padding_top",
                "label": "Padding top",
                "unit": "px",
                "min": 0,
                "max": 120,
                "step": 5,
                "default": 80
            },
            {
                "type": "range",
                "id": "padding_bottom",
                "label": "Padding bottom",
                "unit": "px",
                "min": 0,
                "max": 120,
                "step": 5,
                "default": 80
            },
            {
                "type": "header",
                "content": "Paddings - Tablet"
            },
            {
                "type": "range",
                "id": "padding_top_tablet",
                "label": "Padding top",
                "unit": "px",
                "min": 0,
                "max": 60,
                "step": 5,
                "default": 40
            },
            {
                "type": "range",
                "id": "padding_bottom_tablet",
                "label": "Padding bottom",
                "unit": "px",
                "min": 0,
                "max": 60,
                "step": 5,
                "default": 40
            }
        ],
        "blocks": [
            {
                "type": "blocks",
                "name": "Collection",
                "settings": [
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Title"
                    },
                    {
                        "type": "richtext",
                        "id": "description",
                        "label": "Description"
                    },
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "Image"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "BB - Image with text banner"
            }
        ]
    }
{% endschema %}

