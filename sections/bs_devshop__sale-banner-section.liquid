<style>

  .bs-devshop__sale-banner-section {
    margin: 2rem auto;
  }

  .bs-devshop__sale-banner__background-container {
    position: relative;
    width: 100%;
    height: 26.2rem;
    padding: 6rem 10rem;
    border-radius: 9.42px;
    overflow: hidden;
}

.bs-devshop__sale-banner__background-container>img{
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: -1;
  
}

.bs-devshop__sale-banner__content {
    height: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.bs-devshop__sale-banner__left-content {
    gap: 1rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.bs-devshop__sale-banner__right-content {
    display: flex;
    height: 100%;
    flex-direction: column;
    align-items: flex-end;
}

.bs-devshop__sale-banner__pill {
    width: fit-content;
    background-color: rgba(255, 255, 255, 0.3);
    font-family: Avenir;
    font-size: 1.96rem;
    line-height: 1.718rem;
    letter-spacing: -0.03em;
    text-align: center;
    border-radius: 2.731rem;
    padding: 1rem 2rem;
    border: 0.062rem solid rgba(255, 255, 255, 1);
    color: white;
}

.bs-devshop__sale-banner__main-title {
    margin-top: 2rem;
    font-family: Avenir;
    font-size: 8.164rem;
    font-weight: 400;
    line-height: 7.356rem;
    letter-spacing: -0.03em;
    text-align: left;
    color: white;
}

.bs-devshop__sale-banner__heading {
    margin-top: auto;
    font-family: Avenir;
    font-size: 4.792rem;
    font-weight: 400;
    line-height: 4.318rem;
    letter-spacing: -0.03em;
    text-align: right;
    color: white;
}

.bs-devshop__sale-banner__cta-text-container {
    margin-top: auto;
}

.bs-devshop__sale-banner__cta {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: auto;
    padding: 1rem 2.2rem;
    border-radius: 15.268rem;
    background-color: white;
    font-family: Avenir;
    font-size: 1.6rem;
    font-weight: 500;
}

.bs-devshop__sale-banner__heading.desktop-hide{
  display: block;
}

.bs-devshop__sale-banner__heading.mobile-hide{
  display: none;
}

.bs-devshop__sale-banner__hook-text {
    display: none;
}

.bs-devshop__sale-banner__mobile {
  display: none;  /* Hide mobile image by default */
}

@media screen and (max-width: 749px) {
    .bs-devshop__sale-banner__desktop {
        display: none;  /* Hide desktop image on mobile */
    }

    .bs-devshop__sale-banner__mobile {
        display: block;  /* Show mobile image on mobile */
    }

    .bs-devshop__sale-banner__content {
        height: 100%;
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

  .bs-devshop__sale-banner__background-container {
        padding: 2rem 1.6rem;
        height: 100%;
    }

    .bs-devshop__sale-banner__pill {
        font-family: Avenir;
        font-size: 1.292rem;
        line-height: 1.132rem;
        letter-spacing: -0.03em;
        text-align: center;
    }

    .bs-devshop__sale-banner__main-title {
        width: 65%;
        font-family: Avenir;
        font-size: 5.45rem;
        font-weight: 400;
        line-height: 5.783rem;
        letter-spacing: -0.03em;
        text-align: left;
    }

    .bs-devshop__sale-banner__heading {
        font-family: Avenir;
        font-size: 3.078rem;
        font-weight: 400;
        line-height: 2.773rem;
        letter-spacing: -0.03em;
        text-align: left;
    }

    .bs-devshop__sale-banner__hook-text {
        display: block;
        margin-right: auto;
        color: white;
    }

    .bs-devshop__sale-banner__cta-text-container {
        display: flex;
        align-items: center;
        flex-direction: row;
        gap: 1rem;
        width: 100%;
    }

    .bs-devshop__sale-banner__heading.desktop-hide{
      display: none;
    }

    .bs-devshop__sale-banner__heading.mobile-hide{
      display: block;
    }
}
</style>

{% assign show_bf_collection = false %}
{% for collection in product.collections %}
  {% if collection.id == 449921122543 %}
    {% assign show_bf_collection = true %}
  {% endif %}
{% endfor %}

{% if show_bf_collection %}
<div class="bs-devshop__sale-banner-section pdp-page__wrapper">

  <div class="bs-devshop__sale-banner__background-container wrapper">

  {% if section.settings.desktop_banner != blank %}
    <img
      src="{{ section.settings.desktop_banner | image_url: width: 750 }}"
      alt="{{ section.settings.desktop_banner.alt | escape }}"
      loading="lazy"
      class="bs-devshop__sale-banner__background bs-devshop__sale-banner__desktop"
      width="{{ section.settings.desktop_banner.width }}"
      height="{{ section.settings.desktop_banner.height }}"
    >
  {% endif %}
  {% if section.settings.mobile_banner != blank %}
    <img
      src="{{ section.settings.mobile_banner | image_url: width: 750 }}"
      alt="{{ section.settings.desktop_banner.alt | escape }}"
      alt="{{ section.settings.mobile_banner.alt | escape }}"
      loading="lazy"
      class="bs-devshop__sale-banner__background bs-devshop__sale-banner__mobile"
      width="{{ section.settings.mobile_banner.width }}"
      height="{{ section.settings.mobile_banner.height }}"
    >
  {% endif %}

  <div class="bs-devshop__sale-banner__content">
    <div class="bs-devshop__sale-banner__left-content">
      <div class="bs-devshop__sale-banner__pill">{{ section.settings.pill_text }}</div>
      <h2 class="bs-devshop__sale-banner__main-title">{{ section.settings.main_title }}</h2>
      <h3 class="bs-devshop__sale-banner__heading mobile-hide">{{ section.settings.heading }}</h3>
    </div>

    <div class="bs-devshop__sale-banner__right-content">
      <h3 class="bs-devshop__sale-banner__heading desktop-hide">{{ section.settings.heading }}</h3>

      <div class="bs-devshop__sale-banner__cta-text-container">
      <div class="bs-devshop__sale-banner__hook-text">{{ section.settings.cta_hook_text }}</div>
      <a href="{{ section.settings.cta_link }}" class="bs-devshop__sale-banner__cta">{{ section.settings.cta_text }}</a>
      </div>
    </div>
    </div>
  </div>
</div>
{% endif %}
{% schema %}
{
  "name": "Sale Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "desktop_banner",
      "label": "Desktop Banner Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_banner",
      "label": "Mobile Banner Image"
    },
    {
      "type": "text",
      "id": "pill_text",
      "label": "Pill Text",
      "info": "Appears in top left",
      "default": "Black Friday Early Access"
    },
    {
      "type": "text",
      "id": "main_title",
      "label": "Main Title",
      "info": "Appears on left side",
      "default": "Up to 30% Off"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "info": "Appears on right side above CTA",
      "default": "The Self Care Edit"
    },
    {
      "type": "text",
      "id": "cta_hook_text",
      "label": "Hook Text",
      "info": "Appears left of CTA (mobile only)",
      "default": "While stock lasts"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Banner Link"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "Shop collection"
    },
  ],
  "presets": [
    {
      "name": "Sale Banner",
      "category": "Promotional"
    }
  ]
}
{% endschema %}
