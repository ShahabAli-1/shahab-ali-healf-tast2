{% assign ss = section.settings %}

<div class="wide-image-banner__container">
    {% if ss.image != blank %}
        {% render 'image-element', image: ss.image, image_mobile: ss.image_mobile, size: '1920x', extra_class: 'object-fit--cover wide-banner__img'%}
    {%- endif -%}
    
    <div class="wide-image-banner__content">
        {% if ss.title != blank %}
            <h2 class="wide-image-banner__title">{{ ss.title }}</h2>
        {%- endif -%}
        {% if ss.description != blank %}
            <p class="wide-image-banner__description">{{ ss.description  | strip_html | escape }}</p>
        {%- endif -%}
    </div>        
</div>

{% style %}
    #shopify-section-{{ section.id }}.wide-image-banner {
        padding-top: {{ ss.padding_top }}px;
        padding-bottom: {{ ss.padding_bottom }}px;
    }

    @media screen and (max-width: 750px) {
        #shopify-section-{{ section.id }}.wide-image-banner {
            padding-top: {{ ss.padding_top_tablet }}px;
            padding-bottom: {{ ss.padding_bottom_tablet }}px;
        }
    }
{% endstyle %}

{% schema %}
    {
        "name": "BB - Wide Image Banner",
        "tag": "section",
        "class": "wrapper wide-image-banner",
        "settings": [
            {
                "type": "header",
                "content": "Wide Image Banner"
            },
            {
                "type": "text",
                "id": "title",
                "label": "Title"
            },
            {
                "type": "richtext",
                "id": "description",
                "label": "Description"
            },
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
                "type": "header",
                "content": "Paddings - Desktop"
            },
            {
                "type": "range",
                "id": "padding_top",
                "label": "Padding top",
                "unit": "px",
                "min": 0,
                "max": 120,
                "step": 5,
                "default": 80
            },
            {
                "type": "range",
                "id": "padding_bottom",
                "label": "Padding bottom",
                "unit": "px",
                "min": 0,
                "max": 120,
                "step": 5,
                "default": 80
            },
            {
                "type": "header",
                "content": "Paddings - Tablet"
            },
            {
                "type": "range",
                "id": "padding_top_tablet",
                "label": "Padding top",
                "unit": "px",
                "min": 0,
                "max": 60,
                "step": 5,
                "default": 40
            },
            {
                "type": "range",
                "id": "padding_bottom_tablet",
                "label": "Padding bottom",
                "unit": "px",
                "min": 0,
                "max": 60,
                "step": 5,
                "default": 40
            }
        ],
        "presets": [
            {
                "name": "BB - Wide Image Banner"
            }
        ]
    }
{% endschema %}
