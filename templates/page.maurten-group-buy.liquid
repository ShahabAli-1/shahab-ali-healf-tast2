{{ 'maurten.css' | asset_url | stylesheet_tag }}

<div
  class="section bicarb-public overlay-container"
  data-controller="bicarb-buy-option"
  data-action="maurten-update-cart@window->bicarb-buy-option#cartUpdated"
>
  <div
    class="section-content panel group-buy-panel turbo-panel"
    data-bicarb-buy-option-target="buyPanel"
    data-controller="turbo-navigate"
    data-turbo-navigate-current-panel-value="group"
    data-index="4"
  >
    <div>
      <h1 class="liquid-title">Picking for your athletes.</h1>
      <p>
        When choosing Bicarb System for your Athletes keep in mind the weight of the athlete and the sensitivity of
        their stomach. Our recommendation is to start out with a low dosage (0.20 g/kg) before moving up to medium
        dosage (0.25 g/kg).
      </p>
    </div>
<!-- Remove the outer form and keep only one form -->
<form
  method="POST"
  action="/cart/add"
  accept-charset="UTF-8"
  enctype="multipart/form-data"
  class="add-to-cart"
  data-controller="cart"
  id="add-to-cart-form"
>
  <!-- Required hidden inputs -->
  <input type="hidden" name="form_type" value="product">
  <input type="hidden" name="utf8" value="✓">

  <!-- Quantity Inputs -->
  <ul>
    {% assign product = all_products['maurten-bicarb-system'] %}

    {% for variant in product.variants %}
    <li class="bicarb-products">
      <div class="bicarb-product">
        <span class="product-title">Bicarb System {{ variant.title }}</span>
      </div>
      <div class="amount">
        <input
          type="number"
          name="variant_{{ variant.id }}"
          value="0"
          min="0"
          data-variant-id="{{ variant.id }}"
          data-cart-target="qty"
          data-price="{{ variant.price | divided_by: 100.0 }}"
          data-currency="GBP"
        >
      </div>
    </li>
    {% endfor %}
  </ul>

  <!-- Total Price -->
  <div class="total" style="width: 100%; display: flex; justify-content: space-between">
    <p>Total:</p>
    <p data-cart-target="total">£<span class="maurten-total">0</span></p>
  </div>

  <!-- Submit Button -->
  <div class="qty-price-container">
    <div class="product-form__buttons">
      <button
        type="submit"
        name="add"
        class="btn btn--white button--primary continue product-form__submit btn bundle-form"
        data-cart-target="submitButton"
      >
        <span>Add to Cart</span>
      </button>
    </div>
  </div>
</form>


