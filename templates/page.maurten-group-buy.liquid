<script>
document.addEventListener('DOMContentLoaded', function () {
  const inputs = document.querySelectorAll('input[data-cart-target="qty"]');
  const totalElement = document.querySelector('.maurten-total');
  const form = document.getElementById('add-to-cart-form');
  const submitButton = form.querySelector('button[type="submit"]');

  // ... existing code for updateTotal and checkQuantities ...

  // Handle form submission
  form.addEventListener('submit', function (e) {
    e.preventDefault();

    // Collect variant IDs and quantities
    const items = [];
    inputs.forEach((input) => {
      const quantity = parseInt(input.value, 10) || 0;
      if (quantity > 0) {
        const variantId = input.getAttribute('data-variant-id');
        items.push({ id: variantId, quantity: quantity });
      }
    });

    if (items.length === 0) {
      alert('Please enter a quantity for at least one product.');
      return;
    }

    // Prepare the data for AJAX request
    const formData = {
      items: items
    };

    // Send AJAX request to /cart/add.js
    fetch('/cart/add.js', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'Accept': 'application/json'
      },
      body: JSON.stringify(formData)
    })
    .then(response => {
      if (response.ok) {
        // Items added successfully, dispatch the custom event
        const event = new Event('maurten:cart:add');
        document.dispatchEvent(event);
      } else {
        response.json().then(data => {
          alert(data.message || 'An error occurred while adding items to the cart.');
        });
      }
    })
    .catch(error => {
      console.error('Error:', error);
      alert('An error occurred while adding items to the cart.');
    });
  });
});

</script>

